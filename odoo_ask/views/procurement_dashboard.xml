<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_procurement_dashboard" model="ir.actions.act_window">
            <field name="name">Procurement Dashboard</field>
            <field name="res_model">ask.line</field>
            <field name="view_mode">pivot,list,form</field>
            <field name="context">{'search_default_group_by_product': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    This dashboard aggregates all valid ask quantities by product.
                </p>
            </field>
        </record>

        <record id="view_ask_line_pivot" model="ir.ui.view">
            <field name="name">ask.line.pivot</field>
            <field name="model">ask.line</field>
            <field name="arch" type="xml">
                <pivot string="Aggregated Ask Quantities">
                    <field name="product_id" type="row"/>
                    <field name="valid_ask_qty" type="measure"/>
                    <field name="ask_qty" type="measure"/>
                </pivot>
            </field>
        </record>

        <menuitem
            id="menu_procurement_dashboard"
            name="Procurement Dashboard"
            parent="menu_ask_root"
            action="action_procurement_dashboard"
            sequence="20"/>
    </data>
</odoo>