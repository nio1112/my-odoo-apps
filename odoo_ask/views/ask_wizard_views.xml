<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ask Wizard Action -->
        <record id="odoo_ask.action_ask_wizard" model="ir.actions.act_window">
            <field name="name">快速创建问货单</field>
            <field name="res_model">ask.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Ask Wizard Form View -->
        <record id="view_ask_wizard_form" model="ir.ui.view">
            <field name="name">ask.wizard.form</field>
            <field name="model">ask.wizard</field>
            <field name="arch" type="xml">
                <form string="快速创建问货单">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="partner_id" placeholder="选择客户..." options="{'no_create': True}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_target"/>
                                <field name="recurrence_days"/>
                            </group>
                            <group>
                                <field name="source_type"/>
                                <field name="vkgrp"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="产品明细">
                                <field name="line_ids">
                                    <list editable="bottom" create="true" delete="true">
                                        <field name="product_id" 
                                               options="{'no_create': True, 'no_quick_create': True}"
                                               placeholder="选择产品..."/>
                                        <field name="ask_qty" 
                                               string="问货数量"
                                               placeholder="请输入数量"/>
                                        <field name="werks" 
                                               string="仓库"/>
                                        <field name="comments" 
                                               string="备注"/>
                                    </list>
                                </field>
                            </page>
                            <page string="其他信息">
                                <field name="note" placeholder="请输入备注信息..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_create_ask" string="创建问货单" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- 添加快速创建按钮到菜单 -->
        <menuitem id="menu_ask_wizard" name="快速创建问货单" parent="menu_ask_root" action="odoo_ask.action_ask_wizard" sequence="2"/>
    </data>
</odoo>
