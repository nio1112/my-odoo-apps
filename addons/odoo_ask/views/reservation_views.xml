<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_ask_reservation" model="ir.actions.act_window">
            <field name="name">Ask Reservations</field>
            <field name="res_model">ask.reservation</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_ask_reservation_tree" model="ir.ui.view">
            <field name="name">ask.reservation.tree</field>
            <field name="model">ask.reservation</field>
            <field name="arch" type="xml">
                <list string="Ask Reservations" create="1" delete="1" edit="1">
                    <field name="name" string="预留编号"/>
                    <field name="product_id" string="产品"/>
                    <field name="qty" string="数量"/>
                    <field name="reserved_to_sales_id" string="预留销售员"/>
                    <field name="reserved_at" string="预留时间"/>
                    <field name="obligation_end_date" string="义务结束日期"/>
                    <field name="status" string="状态" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="view_ask_reservation_form" model="ir.ui.view">
            <field name="name">ask.reservation.form</field>
            <field name="model">ask.reservation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name" readonly="1"/></h1>
                        <group>
                            <field name="ask_line_id"/>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="uom_id"/>
                            <field name="reserved_to_sales_id"/>
                            <field name="reserved_at"/>
                            <field name="obligation_end_date"/>
                            <field name="status"/>
                            <field name="related_po_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem
            id="menu_ask_reservation"
            name="Reservations"
            parent="menu_ask_root"
            action="action_ask_reservation"
            sequence="30"
            groups="group_ask_warehouse,group_ask_admin"/>
    </data>
</odoo>