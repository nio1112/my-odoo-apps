<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_demo_record" model="ir.actions.act_window">
        <field name="name">Demo Records</field>
        <field name="res_model">demo.record</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_demo_root" name="Demo" sequence="10"/>
    <menuitem id="menu_demo_record" name="Demo Records"
              parent="menu_demo_root" action="action_demo_record" sequence="10"/>

    <!-- Tree View -->
    <record id="view_demo_record_tree" model="ir.ui.view">
        <field name="name">demo.record.tree</field>
        <field name="model">demo.record</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="value"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_demo_record_form" model="ir.ui.view">
        <field name="name">demo.record.form</field>
        <field name="model">demo.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="value"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>